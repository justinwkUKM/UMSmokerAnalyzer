<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:weightSum="1">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.85"
        android:orientation="vertical"
        android:weightSum="1">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.33">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/achievments_bg"
                android:layout_marginBottom="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_10sdp"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:text="Achievemnts"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_25ssp"/>
            </RelativeLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.33">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/save_money_bg"
                android:layout_marginBottom="@dimen/_20sdp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:text="Money Saved"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_25ssp"/>
            </RelativeLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.34">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="40dp"
                android:background="@drawable/quit_function_bg">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:text="Super Quit Function"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_20ssp"/>
            </RelativeLayout>
        </android.support.v7.widget.CardView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.15"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="70dp">

            <ImageButton
                android:id="@+id/test"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_50sdp"
                android:layout_centerHorizontal="true"
                android:background="?android:selectableItemBackground"
                android:paddingLeft="@dimen/_8sdp"
                android:paddingTop="@dimen/_5sdp"
                android:paddingRight="@dimen/_8sdp"
                android:paddingBottom="@dimen/_12sdp"
                android:scaleType="fitXY"
                android:src="@drawable/profile_icon" />

            <ImageButton
                android:id="@+id/test2"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_50sdp"
                android:layout_below="@+id/test"
                android:layout_centerHorizontal="true"
                android:background="?android:selectableItemBackground"
                android:paddingLeft="@dimen/_8sdp"
                android:paddingTop="@dimen/_5sdp"
                android:paddingRight="@dimen/_8sdp"
                android:paddingBottom="@dimen/_12sdp"

                android:scaleType="fitXY"
                android:src="@drawable/dashboard_icon" />

            <ImageButton
                android:id="@+id/test1"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_50sdp"
                android:layout_below="@+id/test2"
                android:layout_centerHorizontal="true"
                android:background="?android:selectableItemBackground"
                android:paddingLeft="@dimen/_8sdp"
                android:paddingTop="@dimen/_5sdp"
                android:paddingRight="@dimen/_8sdp"
                android:paddingBottom="@dimen/_12sdp"

                android:scaleType="fitXY"
                android:src="@drawable/awards_icon" />

            <ImageButton
                android:id="@+id/test3"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_50sdp"
                android:layout_below="@+id/test1"
                android:layout_centerHorizontal="true"
                android:background="?android:selectableItemBackground"
                android:paddingLeft="@dimen/_8sdp"
                android:paddingTop="@dimen/_5sdp"
                android:paddingRight="@dimen/_8sdp"
                android:paddingBottom="@dimen/_12sdp"

                android:scaleType="fitXY"
                android:src="@drawable/music_icon" />

            <ImageButton
                android:id="@+id/test4"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_50sdp"
                android:layout_below="@+id/test3"
                android:layout_centerHorizontal="true"
                android:background="?android:selectableItemBackground"
                android:paddingLeft="@dimen/_8sdp"
                android:paddingTop="@dimen/_5sdp"
                android:paddingRight="@dimen/_8sdp"
                android:paddingBottom="@dimen/_12sdp"

                android:scaleType="fitXY"
                android:src="@drawable/support_icon" />

            <ImageButton
                android:id="@+id/test5"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_50sdp"
                android:layout_below="@+id/test4"
                android:layout_centerHorizontal="true"
                android:background="?android:selectableItemBackground"
                android:paddingLeft="@dimen/_8sdp"
                android:paddingTop="@dimen/_5sdp"
                android:paddingRight="@dimen/_8sdp"
                android:paddingBottom="@dimen/_12sdp"

                android:scaleType="fitXY"
                android:src="@drawable/direction_icon" />

            <ImageButton
                android:id="@+id/test6"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_50sdp"
                android:layout_below="@+id/test5"
                android:layout_centerHorizontal="true"
                android:background="?android:selectableItemBackground"
                android:paddingLeft="@dimen/_8sdp"
                android:paddingTop="@dimen/_5sdp"
                android:paddingRight="@dimen/_8sdp"
                android:paddingBottom="@dimen/_12sdp"
                android:scaleType="fitXY"
                android:src="@drawable/info" />

            <ImageButton
                android:id="@+id/test7"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_50sdp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="20dp"
                android:background="?android:selectableItemBackground"
                android:paddingLeft="@dimen/_10sdp"
                android:paddingTop="@dimen/_10sdp"
                android:paddingRight="@dimen/_8sdp"
                android:paddingBottom="@dimen/_12sdp"
                android:scaleType="fitXY"
                android:src="@drawable/logout" />

        </RelativeLayout>
    </LinearLayout>
</LinearLayout>